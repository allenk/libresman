#!/bin/sh

prefix=/usr/local
optimize=false
debugsym=true

for arg in "$@"; do
	case "$arg" in
	--prefix=*)
		prefix=`echo $arg | sed 's/--prefix=//'`
		;;

	--enable-opt)
		optimize=true;;
	--disable-opt)
		optimize=false;;

	--enable-debug)
		debugsym=true;;
	--disable-debug)
		debugsym=false;;

	--help)
		echo 'usage: ./configure [options]'
		echo 'options:'
		echo '  --prefix=<path>: installation path (default: /usr/local)'
		echo '  --enable-opt: enable optimizations'
		echo '  --disable-opt: disable optimizations'
		echo '  --enable-debug: include debugging symbols'
		echo '  --disable-debug: do not include debugging symbols'
		echo 'all invalid options are silently ignored'
		exit 0
		;;
	esac
done

echo "prefix: $prefix"
echo "optimize for speed: $optimize" 
echo "include debugging symbols: $debugsym"

echo 'creating makefile ...'
echo "PREFIX = $prefix" >Makefile
if $optimize; then
	echo 'opt = -O3' >>Makefile
fi
if $debugsym; then
	echo 'dbg = -g' >>Makefile
fi

cat Makefile.in >>Makefile

echo 'configuration completed, type make (or gmake) to build.'
